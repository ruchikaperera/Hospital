@model Hospital.Modules.DrugDetails.Models.Drug

@{
    ViewData["Title"] = "Add";
}
<body style="background-color:lightslategray">
    <h2 style="padding-left:500px; font-family:'Times New Roman', Times, serif">Add Drugs</h2>

    @*<h4>Drug</h4>*@
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Drug_ID" class="control-label"></label>
                    <input asp-for="Drug_ID" placeholder="Enter Drug ID" class="form-control" />
                    <span asp-validation-for="Drug_ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" placeholder="Enter Drug Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" placeholder="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Qty" class="control-label"></label>
                    <input asp-for="Qty" placeholder="Quantity" class="form-control" />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" placeholder="Price in Rs" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="control-label"></label>
                    <input asp-for="State" placeholder="Availability" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary"><< Back</a>
                </div>
                                                  
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>


</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
