@model Hospital.Modules.SalaryDetails.Model.SalaryDetail

@{
    ViewData["Title"] = "Salary Details";
}
<body style="background-color:lightslategray">
    
    <h2 style="padding-left:500px; font-family:'Times New Roman', Times, serif">Add Salary Details</h2>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NIC" class="control-label"></label>
                    <input asp-for="NIC" placeholder="Enter NIC number" class="form-control" />
                    <span asp-validation-for="NIC" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" placeholder="Enter Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkingHrs" class="control-label"></label>
                    <input asp-for="WorkingHrs" placeholder="Enter Hours or Days" class="form-control" />
                    <span asp-validation-for="WorkingHrs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" placeholder="Enter Salary rate" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary"><< Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
