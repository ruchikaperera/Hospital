@model IEnumerable<Hospital.Modules.Doctors_Profile.Models.LabReportRequest>

@{

    Layout = "~/Views/Shared/LabDepartment.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>
<body>

    <form class="w3-container w3-white w3-card-1">
        <h5>Filter Reports</h5>
      
        <div class="w3-row">
            <div class="w3-col m2 ">
                <input class="w3-radio" type="radio" name="gender" value="male" checked>
                <label>Pending Reports</label>
            </div>
            <div class="w3-col m2">
                <input class="w3-radio" type="radio" name="gender" value="female">
                <label>Ready Reports</label>
            </div>
        </div>

    </form>

   


    <p>
        <h3><b>Report Details</b></h3>
    </p>


    <table class="table">
        <thead style="background-color:lightseagreen ; text-align:center; color:white ; font-size:15px">
            <tr>
                <th>
                    <b>@Html.DisplayNameFor(model => model.ReportId)</b>
                </th>
                <th>
                    <b>@Html.DisplayNameFor(model => model.nicNo)</b>
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.patientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LabStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LabType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.labNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpecialistName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LabReport)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody style="background-color:powderblue;font-style:initial;text-align:center; color:royalblue;font-size:15px">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <br />
                        <b>@Html.DisplayFor(modelItem => item.ReportId)</b>
                    </td>
                    <td>
                        <br />
                        <b>@Html.DisplayFor(modelItem => item.nicNo)</b>

                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.patientName)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.DoctorName)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.LabStatus)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.LabType)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.DoctorStatus)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.labNo)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.SpecialistName)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.LabReport)
                    </td>
                    <td>
                        <br />
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        <br />
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    </td>
                </tr>
            }
        </tbody>

    </table>


</body>
</html>

